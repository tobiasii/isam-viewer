{
  "name": "isam-viewer",
  "displayName": "ISAM Viewer",
  "description": "Extens√£o para visualizar arquivos ISAM",
  "author": {"name": "tobiasii"},
  "repository": {
    "type": "git",
    "url": "https://github.com/tobiasii/isam-viewer"
  },
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "isamViewer.open",
        "title": "Abrir ISAM Viewer"
      }
    ],
    "customEditors": [
      {
        "viewType": "isamViewer.binaryEditor",
        "displayName": "Editor ISAM",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*.dat"
          }
        ]
      }
    ],
    "configuration": {
      "title": "ISAM Viewer",
      "properties": {
        "isamViewer.path": {
          "type": "string",
          "default": "Exprcdl.exe",
          "description": "Utility executable path"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "files": [
    "images"
  ]
}
